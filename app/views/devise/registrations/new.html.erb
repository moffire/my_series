<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="myform form ">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Имя', class: 'form-control my-input' %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autocomplete: "email", placeholder: 'Email',class: 'form-control my-input' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Пароль', class: 'form-control my-input' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Повторите пароль', class: 'form-control my-input' %>
          </div>

          <div class="form-group">
            <%= f.submit "Регистрация", class: 'btn btn-primary btn-block btn-md' %>
          </div>

          <div class="col-md-12 ">
            <div class="login-or">
              <hr class="hr-or">
              <span class="span-or">или</span>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "Войти с помощью Google", class: 'btn btn-danger btn-block btn-md' %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>