<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="myform form ">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control my-input' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Пароль', class: 'form-control my-input' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label 'Запомнить меня' %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Войти", class: 'btn btn-success btn-block btn-md' %>
          </div>

          <div class="form-group">
            <%= link_to "Регистрация", new_user_registration_path, class: 'btn btn-secondary btn-block btn-md' %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
