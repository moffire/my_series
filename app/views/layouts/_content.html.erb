<div class="container">
  <div class="row text-left">
    <% @top_movies.each_pair do |movie_id, movie_info| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src="<%= movie_info[:movie_image_link] %>" alt="">
          <div class="card-body">
            <h6 class="card-title"><%= movie_info[:movie_ru_title] %></h6>
            <h7 class="card-subtitle mb-2 text-muted"><%= movie_info[:movie_en_title] %></h7>
          </div>
          <% if user_signed_in? %>
            <div class="card-footer text-left">
              <a href="#" class="btn btn-primary">Подробнее</a>
              <a href="#" class="btn btn-success">+</a>
            </div>
          <% else %>
            <div class="card-footer text-left">
              <a href="#" class="btn btn-primary">Подробнее</a>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>